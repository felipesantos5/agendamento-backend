{
  "rewrites": [
    {
      "source": "/:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|Facebot|Twitterbot|WhatsApp|LinkedInBot|Pinterest|Slackbot|TelegramBot|Discordbot).*"
        }
      ],
      "destination": "/api/og/:slug"
    },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "https://compre.barbeariagendamento.com.br",
      "permanent": true
    },
    {
      "source": "/localizacao/:barbershopId",
      "destination": "https://api.barbeariagendamento.com.br/barbershops/:barbershopId/location",
      "permanent": false
    }
  ]
}
